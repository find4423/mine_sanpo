<header class="header">
      <div class="header_bar">
        <h1 class="grid-6"><a href="/"><div class="minesanpo">Minesanpo</div></a></h1>
        <% if user_signed_in? %>
          <div class="user_nav grid-6">
            <span>
              <ul class="user__info">
                <li>
                  <%= link_to "zzz...", destroy_user_session_path, method: :delete %>
                </li>
              </ul>
              
            </span>
              
          </div>
        <% else %>
          <div class="grid-6">
            <%= link_to "Login", new_user_session_path, class: "post" %>
            <%= link_to "Newuser", new_user_registration_path, class: "post" %>
          </div>
        <% end %>
      </div>
</header>
<div class="contents row">
  <p><%= @user.nickname %></p>

  <%# 歩数カウント %>
  <%= @steps.values.sum %>
  <%# ////////// %>
  
  <%# フォロワー、フォロー数 %>
    <p><%= link_to "#{@user.followings.count}フォロー", followings_user_path(@user) %> <%= link_to "#{@user.followers.count}フォロワー", followers_user_path(@user)%></p>
  <%#  //////////////////%>

    <% if @user == current_user %>
      <div class="active-form">
        <%= form_with url:actives_path, local: true do |f| %>
        <div class="form-step">
          <%= f.text_field :step, class:"step-input", id:"active-step" %>
        </div>
        <div class="form-submit">
          <%= f.submit "記録する", class:"form-btn"%>
        </div>
        <% end %>
      </div>
    <% else %>
      <% if @user.is_followed_by?(current_user) %>
        <%= link_to user_relationships_path(@user), method: :delete do %>
          <p><button class="btn btn-danger">フォロー解除</button></p>
        <% end %>
      <% else %>
        <%= link_to user_relationships_path(@user), method: :post do %>
          <p><button class="btn btn-primary">フォロー</button></p>
        <% end %>
      <% end %>
    <% end %>
    <%= render "share/posts"%>
</div>  