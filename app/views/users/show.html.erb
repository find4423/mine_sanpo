<div class="contents row">
<p><%= @user.nickname %></p>
  <p><%= link_to "#{@user.followings.count}フォロー", followings_user_path(@user) %> <%= link_to "#{@user.followers.count}フォロワー", followers_user_path(@user)%></p> 
  <% if @user == current_user %>
  <% else %>
    <% if @user.is_followed_by?(current_user) %>
      <%= link_to user_relationships_path(@user), method: :delete do %>
        <p><button class="btn btn-danger">フォロー解除</button></p>
      <% end %>
    <% else %>
      <%= link_to user_relationships_path(@user), method: :post do %>
        <p><button class="btn btn-primary">フォロー</button></p>
      <% end %>
    <% end %>
  <% end %>
 <div class="contents">
  <% @posts.each do |post| %>
    <div class="content_post" >
      <div class="content_left_box">
        <div class="content_image"><%= image_tag post.image.variant(resize: '500x500'), class: 'post-image' %></div>
      </div>
      <div class="content_right_box">
        <div class="content_text"><%= post.text %></div>
        <div class="name">
          <a href="/users/<%= post.user.id%>">
            <%= post.user.nickname %>
          </a>
        </div>
        <% if current_user == post.user %>
          <div class="post_delete"><%= link_to ' delete ———', post_path(post.id), method: :delete %></div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
</div>  