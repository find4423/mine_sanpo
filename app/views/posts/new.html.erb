<div class="form_contents ">
  <div class="container">
    <h3>Post</h3>
    <%= form_with(model: @post, local: true) do |form| %>
    <div class="form_image">
      <%= form.file_field :image, placeholder: "Image" %>
    </div>
    <div class="form_text">
      <%= form.text_area :text, placeholder: "text", rows: "1" %>
    </div>
    <div class="form_submit">
      <%= form.submit "SEND" %>
    </div>
    <% end %>
  </div>
</div>